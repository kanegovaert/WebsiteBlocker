{
  "manifest_version": 2,
  "name": "Website Blocker",
  "version": "1.0",
  "description": "Block websites with password protection",
  "icons": {
    "48": "block.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "settings.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html"
  },
  "applications": {
    "gecko": {
      "id": "contact@kanegovaert.com"
    }
  }
}