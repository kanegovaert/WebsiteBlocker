{

  "manifest_version": 2,
  "name": "WebsiteBlocker",
  "version": "1.0",

  "description": "Block websites with the use of a master password",

  "icons": {
    "48": "icons/block.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["blocker.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  }
}